<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.niit.model.student" table="STUDENT">
		<id name="studid" type="integer">
		<column name="STUDID" length="10"></column>
		</id>
		<property name="name" type="string">
		<column name="NAME" length="20"></column>
		</property>
		<property name="email" type="string">
		<column name="EMAIL" length="40"></column>
		</property>
		<property name="age" type="integer">
		<column name="AGE" length="10"></column>
		</property>
	</class>
</hibernate-mapping>